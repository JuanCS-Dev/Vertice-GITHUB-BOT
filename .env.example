# Application
NODE_ENV=development
PORT=3000
APP_NAME=vertice-github-bot

# Database
DATABASE_URL="postgresql://vertice:vertice@localhost:5432/vertice_github_bot?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# GitHub
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_WEBHOOK_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# AI Services
GEMINI_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Observability
OPENTELEMETRY_ENABLED=true
OPENTELEMETRY_ENDPOINT=http://localhost:4318/v1/traces
LOG_LEVEL=info
LOG_FORMAT=json

# Constitutional Compliance
CONSTITUTIONAL_MODE=strict
REQUIRED_CRS=95.0
MAX_LEI=1.0
MIN_COVERAGE=90.0

# Security
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
WEBHOOK_SIGNATURE_VERIFY=true

# Job Queue
QUEUE_REDIS_PREFIX=vertice:queue
QUEUE_DEFAULT_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=3000
